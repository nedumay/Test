<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40px"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="127dp"
                android:background="@drawable/image_1"
                android:elevation="20dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/name"
                android:layout_width="137dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="Rick Sanchez"
                android:textAppearance="@style/rick_sanche"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.112"
                app:layout_constraintStart_toEndOf="@+id/image_1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="87dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="Human male"
                android:textAppearance="@style/human_male"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <RelativeLayout
                android:id="@+id/frame_1"
                android:layout_width="56dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/frame_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/name"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="40dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:gravity="top"
                    android:text="Alive"
                    android:textAppearance="@style/alive" />
            </RelativeLayout>

            <View
                android:id="@+id/rectangle_watch"
                android:layout_width="148dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rectangle_1"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="134dp"/>

            <TextView
                android:id="@+id/watch_episo"
                android:layout_width="106dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="Watch episodes"
                android:textAppearance="@style/watch_episo"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_watch"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_watch"
                app:layout_constraintStart_toStartOf="@+id/rectangle_watch"
                app:layout_constraintTop_toTopOf="@+id/rectangle_watch"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/polygon_1"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/polygon_1"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_watch"
                app:layout_constraintEnd_toStartOf="@+id/watch_episo"
                app:layout_constraintStart_toStartOf="@+id/rectangle_watch"
                app:layout_constraintTop_toTopOf="@+id/rectangle_watch" />

            <ImageView
                android:id="@+id/vector"
                android:layout_width="8.4dp"
                android:layout_height="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/vector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/rectangle_watch"
                app:layout_constraintTop_toBottomOf="@+id/rectangle_watch"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/planet"
                android:layout_width="102dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="Earth"
                android:textAppearance="@style/earth_c_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_watch"
                app:layout_constraintHorizontal_bias="0.21"
                app:layout_constraintStart_toEndOf="@+id/vector"
                app:layout_constraintTop_toBottomOf="@+id/rectangle_watch" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>